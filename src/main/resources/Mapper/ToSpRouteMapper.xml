<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.electronicGuideSD.dao.ToSpRouteMapper">
 	<select id="selectForInt" resultType="java.lang.Integer">
 		select count(*) from to_sp_route r,scenic_place sp where r.scePlaId=sp.id
		<if test="name!=null&amp;name!=''">
			and sp.name like'%${name}%'
		</if>
 	</select>
 	<select id="selectList" resultType="com.electronicGuideSD.entity.ToSpRoute">
 		select r.*,sp.name spName from to_sp_route r,scenic_place sp where r.scePlaId=sp.id
		<if test="name!=null&amp;name!=''">
			and sp.name like'%${name}%'
		</if>
 		 order by r.sort limit #{start},#{rows}
 	</select>
 	<insert id="add" parameterType="com.electronicGuideSD.entity.ToSpRoute">
 		insert into to_sp_route
 		<trim prefix="(" suffix=")" suffixOverrides=",">
 			<if test="x!=null">
 				x,
 			</if>
 			<if test="y!=null">
 				y,
 			</if>
 				createTime,
 			<if test="sort!=null">
 				sort,
 			</if>
 			<if test="scePlaId!=null">
 				scePlaId,
 			</if>
 		</trim>
 		values
 		<trim prefix="(" suffix=")" suffixOverrides=",">
 			<if test="x!=null">
 				#{x},
 			</if>
 			<if test="y!=null">
 				#{y},
 			</if>
 				now(),
 			<if test="sort!=null">
 				#{sort},
 			</if>
 			<if test="scePlaId!=null">
 				#{scePlaId},
 			</if>
 		</trim>
 	</insert>
 </mapper>